snippet mpiinit
options head indent
  {-# LANGUAGE ScopedTypeVariables #-}
  import Control.Parallel.MPI.Base as B;
  import Control.Parallel.MPI.Simple as S;

  root :: Rank
  root = 0

  main = do
      B.init
      size <- B.commSize commWorld
      rank <- B.commRank commWorld
      process rank
      B.finalize

  process :: Rank -> IO ()
  process rank
    | rank == 0 = do return ()
    | otherwise = return ()

